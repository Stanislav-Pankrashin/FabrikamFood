<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FabrikamFood.MenuPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Label Text="Menu" Grid.ColumnSpan ="2" Grid.Row="0" Grid.Column ="0"/>
    <Button Text="Entrees" Grid.ColumnSpan ="2" Grid.Row="1" Grid.Column ="0" Clicked="entreesClicked"/>
    <Button Text="Mains" Grid.ColumnSpan ="2" Grid.Row="2" Grid.Column ="0" Clicked="mainsClicked"/>
    <Button Text="Vegetarian" Grid.ColumnSpan ="2" Grid.Row="3" Grid.Column ="0" Clicked="vegetarianClicked"/>

  </Grid>
</ContentPage>